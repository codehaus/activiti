<definitions 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:activiti="http://activiti.org/bpmn-extensions"
  targetNamespace="http://www.activiti.org/bpmn2.0">

  <process id="sendMailExample" >

    <startEvent id="theStart" />
    <sequenceFlow sourceRef="theStart" targetRef="sendMail" />
    
    <serviceTask id="sendMail" activiti:type="mail">
      <extensionElements>
        <activiti:field activiti:name="from" activiti:valueExpr="${sender}" />
        <activiti:field activiti:name="to" activiti:valueExpr="${recipient}" />
        <activiti:field activiti:name="subject" activiti:valueExpr="Your order ${orderId} has been shipped" />
        <activiti:field activiti:name="html">
          <activiti:valueExpr>
            <![CDATA[
              <html>
                <body>
                  Hello ${male ? 'Mr.' : 'Mrs.' } ${recipientName},<br/><br/>
                  
                  As of ${now}, your order <b>has been processed and shipped</b>.<br/><br/>
                  
                  Kind regards,<br/>
                  
                  TheCompany.
                </body>
              </html>
            ]]>
          </activiti:valueExpr>
        </activiti:field>      
      </extensionElements>
    </serviceTask>
    <sequenceFlow sourceRef="sendMail" targetRef="theEnd" />
    
    <endEvent id="theEnd" />

  </process>

</definitions>