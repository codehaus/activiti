<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<settings>
		<setting name="lazyLoadingEnabled" value="false" />
	</settings>
	<environments default="development">
		<environment id="development">
		<transactionManager type="JDBC"/>
		<dataSource type="POOLED">
			<property name="driver" value="org.h2.Driver"/> <!-- ${driver} -->
			<property name="url" value="jdbc:h2:tcp://localhost/activiti"/> <!-- ${url} TODO: try jdbc:h2:tcp://localhost/activiti | jdbc:h2:mem:activiti--> 
			<property name="username" value="sa"/> <!-- ${user} -->
			<property name="password" value=""/> <!-- ${password} -->
		</dataSource>
		</environment>
	</environments>  	
	<mappers>
		<mapper resource="org/activiti/cycle/impl/db/ibatis/config.mapping.xml" />
	</mappers>
</configuration>
